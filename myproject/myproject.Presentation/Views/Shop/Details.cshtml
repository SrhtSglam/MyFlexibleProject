@model ProductDetailModel
<div class="row">
    <div class="col-md-3">
        @* <img src="~/img/new/@Model.Product.ImageUrl" class="img-fluid"> *@
        <div id="carouselItemIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <img src="~/img/new/@Model.Product.ImageUrl" alt="Image" data-target="#carouselItemIndicators" class="carouselitemdiv" data-slide-to="0">
                <img src="~/img/new/laptop2.png" alt="Image" data-target="#carouselItemIndicators" class="carouselitemdiv" data-slide-to="1">
                <img src="~/img/new/laptop3.png" alt="Image" data-target="#carouselItemIndicators" class="carouselitemdiv" data-slide-to="2">
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                <img class="d-block w-100" src="~/img/new/@Model.Product.ImageUrl" alt="image">
                </div>
                <div class="carousel-item">
                <img class="d-block w-100" src="~/img/new/laptop2.png" alt="Second slide">
                </div>
                <div class="carousel-item">
                <img class="d-block w-100" src="~/img/new/laptop3.png" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselItemIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselItemIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="col-md-9">                
            <h1 class="mb-3">@Model.Product.Company @Model.Product.Name</h5> <hr>

            @foreach (var item in Model.Categories)
            {
                <a asp-controller="shop" asp-action="list" asp-route-category="@item.Url" class="btn btn-link p-0 mb-3">@item.Name</a> 
            }                          
            
            <div class="mb-3">
                <h4 class="text-primary mb-3">
                    <i class="fas fa-lira-sign"></i>@Model.Product.Price
                </h4>
                
                <form asp-controller="Cart" asp-action="AddToCart" method="POST" class="form-inline">
                    <input type="hidden" name="productId" value="@Model.Product.ProductId">
                    <div class="input-group mb-3">
                        <input type="number" name="quantity" class="form-control" value="1" min="1" step="1" style="width: 100px;">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-cart-plus"></i>@_localization.GetKey("product_addtocart_button")
                            </button>
                        </div>
                    </div>     
               
                </form>
            </h6>
    </div>
</div>
<div class="row">
    <div class="col-md-12 p-5">
        <h5>@_localization.GetKey("product_details_properties")</h5>
        <p class="p-3">@Html.Raw(Model.Product.Description)</p>
    </div>
</div>