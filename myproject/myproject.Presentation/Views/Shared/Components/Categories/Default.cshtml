@model List<Category>
@foreach (var category in Model)
{
    <li class="nav-item">
        <button class="btn btn-toggle align-items-center rounded collapsed text-white dropdown-toggle"
            data-bs-toggle="collapse" data-bs-target="#@category.Name-categoriesdropdown" aria-expanded="false">
            @category.Name
        </button>
        <div class="collapse" id="@category.Name-categoriesdropdown">
            <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                @await Component.InvokeAsync("SubCategories")
            </ul>
        </div>
    </li>
}
