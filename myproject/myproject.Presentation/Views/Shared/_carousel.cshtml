@using myproject.Presentation.Models;
@model HomeModel

@if (Model.CarouselSettings.IsCarousel)
{
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            @for(int i = 1; i < Model.CarouselSettings.CarouselHeaderLine.Count; i++)
            {
                <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
            }
        </ol>
        <div class="carousel-inner" align="center">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/img/carousel/@Model.CarouselSettings.CarouselHeaderLine[0].CarouselImageUrl" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>@Model.CarouselSettings.CarouselHeaderLine[0].CarouselHeader</h5>
                    <p>@Model.CarouselSettings.CarouselHeaderLine[0].CarouselLine</p>
                </div>
            </div>
            @for (int i = 1; i < Model.CarouselSettings.CarouselHeaderLine.Count; i++)
            {
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/img/carousel/@Model.CarouselSettings.CarouselHeaderLine[i].CarouselImageUrl" alt="First slide">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@Model.CarouselSettings.CarouselHeaderLine[i].CarouselHeader</h5>
                        <p>@Model.CarouselSettings.CarouselHeaderLine[i].CarouselLine</p>
                    </div>
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}
